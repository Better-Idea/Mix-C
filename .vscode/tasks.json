{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "g++.exe",
            "args": [
                "-I${workspaceFolder}",
                "-std=c++2a",
                "-fconcepts",
                "-g",
                "${workspaceFolder}/extern_api_g++.o",
                "${file}",
                "-o",
                "${workspaceFolder}/../${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "g++ build extern_api.o",
            "command": "g++.exe",
            "args": [
                "-I${workspaceFolder}",
                "-std=c++2a",
                "-fconcepts",
                "-mavx",
                "-mavx2",
                "-O2",
                "${workspaceFolder}/extern_api_g++.cpp",
                "-c",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "clang++.exe",
            "args": [
                "-I${workspaceFolder}",
                "-std=c++2a",
                "-mavx",
                "-mavx2",
                "-g",
                "${workspaceFolder}/extern_api_clang++.o",
                "${file}",
                "-o",
                "${workspaceFolder}/../${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "clang++ build extern_api.o",
            "command": "clang++.exe",
            "args": [
                "-I${workspaceFolder}",
                "-std=c++2a",
                "-mavx",
                "-mavx2",
                "-O2",
                "${workspaceFolder}/extern_api_clang++.cpp",
                "-c"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}
