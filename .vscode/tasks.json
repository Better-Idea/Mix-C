{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cpp build active file",
            // "command": "/usr/bin/clang-9",
            "command": "/usr/bin/g++-8",
            // "command": "/usr/bin/gcc",
            "args": [
                "-Dxenable_xdebug",
                "-Dxenable_xdebug_fail",
                "-Dxis_x86=1",
                "-Dxos64=1",
                "-I${fileDirname}",
                "-std=c++2a",
                "-lstdc++",
                // "",
                // "-fno-rtti",
                // "-fno-exceptions",
                // "-mssse3",
                // "-O2",
                // "-fopenmp",

                // OpenGL
                "-lGL",
                "-lGLEW",
                "-lGLU",
                "-lglut",
                "-lglfw",

                // "-lX11",
                // "-lpthread",
                // "-lXrandr",
                // "-lXi",

                "-g2",
                // "${fileDirname}/io/private/tty.cpp",
                "${file}",
                "-o",
                "${fileDirname}/../${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}