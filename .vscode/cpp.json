{
	"make a struct with gc mark" : {
		"prefix" : "xgc",
		"body" : [
			"#ifdef xusing_$1",
			"    namespace xuser::inc{",
			"        using namespace xusing_$1;",
			"    }",
			"",
			"    #undef xusing_$1",
			"#endif",
			"",
			"#ifndef xpack_$1",
			"#define xpack_$1",
			"    #pragma push_macro(\"xuser\")",
			"        #undef  xuser",
			"        #define xuser mixc::$1",
			"        #include\"define/base_type.hpp\"",
			"        #include\"macro/xgc.hpp\"",
			"    #pragma pop_macro(\"xuser\")",
			"",
			"    namespace mixc::$1{",
			"        xgc($2)",
			"            xgc_fields(",
			"                xpub(, ),",
			"            );",
			"",
			"            $2() = default;",
			"        xgc_end();",
			"    }",
			"",
			"#endif",
			"#define xusing_$1     mixc::$1",
			"",
		],
		"description" : "make a restricted including"
	},


	"make a struct expand" : {
		"prefix" : "xexp",
		"body" : [
			"#pragma push_macro(\"xuser\")",
			"    #ifndef xpack_$1_$2_$3",
			"        #ifdef  xusing_$1_$2",
			"            #define xpack_$1_$2_$3   1",
			"        #else",
			"            #define xpack_$1_$2_$3   0",
			"        #endif",
			"",
			"        #if xpack_$1_$2_$3",
			"            #pragma push_macro(\"xusing_$1_$2\")",
			"        #endif",
			"            #undef  xusing_$1_$2",
			"            #undef  xuser",
			"            #define xuser mixc::$1_$2_$3",
			"            #include\"$1/$2.hpp\"",
			"                #include\"\" // $1/$2/functions",
			"            #include\"$1/$2.hpp\"",
			"        #if xpack_$1_$2_$3",
			"            #pragma pop_macro(\"xusing_$1_$2\")",
			"        #endif",
			"",
			"        namespace mixc::$1_$2_$3{",
			"            template<class brother>",
			"            struct $2 : brother {",
			"                using brother::brother;",
			"            };",
			"        }",
			"    #endif",
			"#pragma pop_macro(\"xuser\")",
			"",
			"namespace xuser::$1_$2_$3{",
			"    using $2 = mixc::$1_$2_$3::$2<xusing_$1_$2::$2>;",
			"}",
			"",
			"#undef  xusing_$1_$2",
			"#define xusing_$1_$2 xuser::$1_$2_$3",
			""
		],
		"description" : "make a base expand function"
	}
}